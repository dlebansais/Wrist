<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

  <Style x:Key="defaultDesignTextTitle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
    <Setter Property="FontSize" Value="48"/>
    <Setter Property="FontFamily" Value="ExpletusSans-Regular"/>
  </Style>

</ResourceDictionary>
