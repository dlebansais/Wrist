<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style x:Key="defaultDesignTextPageTitle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
    <Setter Property="FontFamily" Value="SourceSansPro-Light.ttf"/>
    <Setter Property="FontSize" Value="72"/>
    <Setter Property="Foreground" Value="DarkBlue"/>
  </Style>

  <Style x:Key="defaultDesignTextPageTitleDisabled" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
    <Setter Property="FontFamily" Value="SourceSansPro-Light.ttf"/>
    <Setter Property="FontSize" Value="72"/>
    <Setter Property="Foreground" Value="Gray"/>
  </Style>

</ResourceDictionary>
