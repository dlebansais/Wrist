<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style x:Key="defaultDesignTextFeatureHeadline" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
    <Setter Property="FontFamily" Value="SourceSansPro-Light.ttf"/>
    <Setter Property="FontSize" Value="36"/>
    <Setter Property="Foreground" Value="DarkGreen"/>
  </Style>

  <Style x:Key="defaultDesignTextFeatureHeadlineDisabled" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
    <Setter Property="FontFamily" Value="SourceSansPro-Light.ttf"/>
    <Setter Property="FontSize" Value="36"/>
    <Setter Property="Foreground" Value="Gray"/>
  </Style>

</ResourceDictionary>
