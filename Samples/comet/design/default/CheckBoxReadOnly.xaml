<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style x:Key="defaultDesignCheckBoxReadOnly" TargetType="{x:Type CheckBox}" BasedOn="{StaticResource {x:Type CheckBox}}">
    <Setter Property="FontFamily" Value="SourceSansPro-Light.ttf"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="IsEnabled" Value="False"/>
    <Setter Property="Foreground" Value="Black"/>
  </Style>

  <Style x:Key="defaultDesignCheckBoxReadOnlyDisabled" TargetType="{x:Type CheckBox}" BasedOn="{StaticResource {x:Type CheckBox}}">
    <Setter Property="FontFamily" Value="SourceSansPro-Light.ttf"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="IsEnabled" Value="False"/>
    <Setter Property="Foreground" Value="Gray"/>
  </Style>

</ResourceDictionary>
